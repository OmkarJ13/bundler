{
  "name": "bundler",
  "version": "1.0.0",
  "description": "A minimal JavaScript bundler",
  "main": "./dist/index.js",
  "scripts": {
    "test": "vitest run",
    "test-watch": "vitest",
    "build": "tsc",
    "typescript:check": "tsc --noEmit",
    "watch": "tsc --watch",
    "prettier": "prettier --write --ignore-unknown",
    "prettier:check": "prettier --check --ignore-unknown",
    "eslint": "eslint --fix",
    "eslint:check": "eslint",
    "prepare": "husky"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OmkarJ13/bundler.git"
  },
  "bin": {
    "bundler": "./dist/cli.js"
  },
  "keywords": [
    "bundler",
    "javascript",
    "typescript",
    "modules"
  ],
  "author": "OmkarJ13",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OmkarJ13/bundler/issues"
  },
  "homepage": "https://github.com/OmkarJ13/bundler#readme",
  "devDependencies": {
    "@babel/generator": "^7.28.0",
    "@babel/parser": "^7.28.0",
    "@babel/traverse": "^7.28.0",
    "@babel/types": "^7.28.2",
    "@eslint/js": "^9.32.0",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^24.1.0",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "yargs": "^18.0.0"
  }
}
