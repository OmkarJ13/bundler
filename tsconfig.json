{
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist",
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "baseUrl": ".",
    "noFallthroughCasesInSwitch": true
  }
}
